{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "declaration": true,
    "module": "commonjs",
    "outDir": "./app_dist",
    "target": "es6",
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@project-sunbird/OpenRAP/*": ["OpenRAP/dist/*"]
    }
  },
  "exclude": ["node_modules", "*/**/*.spec.ts", "*.spec.ts", "temp", "client", "resourcebundles", "test", "OpenRAP"]
}
